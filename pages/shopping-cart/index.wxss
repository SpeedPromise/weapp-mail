/* pages/shopping_cart/index.wxss */

page {
  background-color: #f2f2f2;
  min-height: 100%;
}

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.title-box {
  width: 100%;
  padding-top: 330rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat center 205rpx;
  background-size: 100rpx auto;
  margin-bottom: 50rpx;
}

.jump-index {
  color: #fff;
  background-color: #c00;
  border-radius: 10rpx;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
}

.goods-list {
  border-color: #f2f2f2;
  width: 100%;
  padding-bottom: 100rpx;
}

.selected {
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  width: 870;
  box-sizing: border-box;
  transition: margin-left 0.2s ease-in-out;
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
  background-size: 40rpx auto;
}

.selected.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
  background-size: 40rpx auto;
}

.goods-info {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  width: 720rpx;
  padding: 30rpx 0 30rpx 70rpx;
}

.img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 10rpx;
}

.img {
  width: 160rpx;
  height: 160rpx;
}

.text-box {
  width: 440rpx;
  position: relative;
}

.goods-title {
  font-size: 30rpx;
  color: #000;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.goods-label {
  font-size: 24rpx;
  color: #999;
  height: 36rpx;
  line-height: 36rpx;
}

.goods-price {
  font-size: 26rpx;
  color: #e64340;
}

.num-contents {
  display: flex;
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  right: 30rpx;
  bottom: 0;
  font-size: 24rpx;
  text-align: center;
}

.num-sub, .num-input, .num-add {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.num-input {
  font-size: 28rpx;
}

.num-input input {
  height: 100%;
}

.limit {
  background-color: #eee;
}

.del-btn {
  width: 120rpx;
  text-align: center;
  background-color: #c00;
  font-size: 28size;
  color: #fff;
}

.settlement {
  position: fixed;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #ddd;
  background-color: #fff;
  z-index: 5;
}

.all-selected {
  padding-left: 80rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #c00;
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
  background-size: 40rpx auto;
}

.all-selected.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
  background-size: 40rpx auto;
}

.price {
  display: flex;
  justify-content: center;
  padding-right: 220rpx;
  flex-direction: column;
  box-sizing: border-box;
}

.total {
  font-size: 32rpx;
  color: #000;
}

.total-detail {
  font-size: 22rpx;
  color: #555;
}

.btn {
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #c00;
  color: #fff;
}

.btn.noSelected {
  background-color: #ccc;
}
