/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
  display: block;
}
/*banner*/
.swiper-container {
  position: relative;
}
.swiper {
  height: 300rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background-color: #fff;
  border-radius: 50%;
  transition: all .6s;
  opacity: .5;
}
.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}
/*category*/
.category-box {
  background-color: #fff;
  clear: both;
}
.category-list {
  width: 150rpx;
  margin-top: 20rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
category-colunm {
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}
.category-img {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.category-title {
  font-size: 24rpx;
  text-align: center;
}
.type-item-on{
  color:#e64340;
  border-bottom: 1rpx solid #e64340;
}

.weui-loadmore {
  margin-bottom: 0px;
}
/*商品相关*/
.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #fafafa;
}
.goods-box{
  width: 339rpx;
  height: 472rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius:5px;
}
.goods-box .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 339rpx;
   height: 339rpx;
}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}

.no-more-goods {
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 48rpx;
  color: #999
}